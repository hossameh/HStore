@model HStore.ClientsPayments

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">New Client Payment</h4>
        <p class="card-category"></p>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ClientId" class="control-label"></label>
                        <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaymentValue" class="control-label"></label>
                        <input asp-for="PaymentValue" class="form-control" />
                        <span asp-validation-for="PaymentValue" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaymentDate" class="control-label"></label>
                        <input asp-for="PaymentDate" class="form-control" />
                        <span asp-validation-for="PaymentDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaymentComment" class="control-label"></label>
                        <input asp-for="PaymentComment" class="form-control" />
                        <span asp-validation-for="PaymentComment" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-dark pull-right">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>
       

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
