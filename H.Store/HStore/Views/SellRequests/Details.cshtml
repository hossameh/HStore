@model HStore.SellRequest

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">Sell Request Details</h4>
        <p class="card-category"></p>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InvoiceNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InvoiceNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Client)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Client.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SellDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SellDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Paid)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Paid)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Remaining)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Remaining)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalAmount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
            <dt class="col-sm-2">
                Items
            </dt>
            <dd class="col-sm-10">
                <table id="detailsTable" class="table">
                    <thead class="text-info">
                    <th>Item Name</th>
                    <th>Sell Price</th>
                    <th>Sell Quantity</th>
                    <th>Total</th>
                    <tbody>
                        @foreach (var item in Model.SellRequestDetails)
                        {
                            <tr>

                                <td>@item.Item.Name</td>
                                <td>@item.SellPrice</td>
                                <td>@item.SellQuantity</td>
                                <td>@item.SellTotalAmount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index" class="btn btn-dark">Back to List</a>
    </div>
</div>
