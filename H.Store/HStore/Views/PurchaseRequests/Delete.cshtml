@model HStore.PurchaseRequest

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">Delete Items </h4>
        <p class="card-category">Are you sure you want to delete @Html.DisplayFor(model => model.InvoiceNumber)?</p>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InvoiceNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InvoiceNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PurchaseDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Paid)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Paid)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Remaining)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Remaining)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalAmount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
            <dt class="col-sm-2">
                Items
            </dt>
            <dd class="col-sm-10">
                <table id="detailsTable" class="table">
                    <thead class="text-info">
                    <th>Item Name</th>
                    <th>Purchase Price</th>
                    <th>Purchase Quantity</th>
                    <th>Total</th>
                    <tbody>
                        @foreach (var item in Model.PurchaseRequestDetails)
                        {
                            <tr>

                                <td>@item.Item.Name</td>
                                <td>@item.PurchasePrice</td>
                                <td>@item.PurchaseQuantity</td>
                                <td>@item.PurchaseTotalAmount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-dark">Back to List</a>
        </form>
    </div>
</div>

