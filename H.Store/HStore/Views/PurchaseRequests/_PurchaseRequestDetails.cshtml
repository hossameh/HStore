@model List<HStore.PurchaseRequestDetails>

<div class="col-lg-12">
    <div class="form-group">
        <label class="control-label">Item</label>
        <select class="form-control" asp-items="ViewBag.SupplierId"></select>
    </div>
    <div class="form-group">
        <label id="PurchasePrice" class="control-label">Purchase Price</label>
        <input type="number" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label id="PurchaseQuantity" class="control-label">Purchase Quantity</label>
        <input type="number" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <table class="table">
        <thead class="text-primary">
        <th>Item Code</th>
        <th>Item Name</th>
        <th>Purchase Price</th>
        <th>Purchase Quantity</th>
        </thead>
        <tbody>
            <tr>
                <td>12</td>
                <td>Name</td>
                <td>Price</td>
                <td>Quantity</td>

            </tr>
        </tbody>
    </table>
</div>