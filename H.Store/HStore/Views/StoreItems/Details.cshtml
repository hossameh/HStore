@model HStore.StoreItems

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">Store Items</h4>
        <p class="card-category"></p>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Code)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Code)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TodayPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TodayPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StorePrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StorePrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductionDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductionDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExpirationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index" class="btn btn-dark">Back to List</a>
    </div>
</div>
